@page "/counter"
@rendermode InteractiveServer
@using MLSM.UI.Components
@using MLSM.UI.Models
<PageTitle>Language Test UI</PageTitle>

<h1>Counter</h1>

<button class="btn btn-primary" @onclick="OpenDialogLang">Click me</button>

<LanguageString IsVisible=IsPopupVisibile IsVisibleSave=IsSaveButtonVisible Properties=properties></LanguageString>

@code {
	private int currentCount = 0;
	private bool IsPopupVisibile = false;
	private bool IsSaveButtonVisible = true;
	private void OpenDialogLang()
	{
		IsPopupVisibile = true;
	}

	public LanguageStringComponentResponseDto? properties { get; set; }
	protected override void OnInitialized()
	{
		properties = new() { Title = "Language Manager", Description = "Input text for both languages" };
	}
}
